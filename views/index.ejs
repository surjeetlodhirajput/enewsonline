<div class="container top-4">
  <% Array.from(data.top4).forEach(post=>{ %> 
    <div class="card" style="width: 18rem;">
        <img src="/images/<%= post.thumbnail %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= post.title.substring(0,10)+"..." %> </h5>
          <p class="card-text"><%= post.body.substring(0,100) %></p>
          <a href="/posts/readPost/<%= post._id%>" class="btn btn-primary" >Read</a>
        </div>
      </div>
      <% }) %> 
</div>
