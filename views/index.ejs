          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="dashboard collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
  <% if(typeof user!="undefined" ){ %>
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="posts/dashboard">DashBoard <%=  %></a>
    </li>  <% }else{ %>
      
  <li class="nav-item">
    <a  id="login-link" href="/user/login">&nbsp;&nbsp;LogIn  </a>
  </li>

  <% } %>
              
          <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Category
              </a>
              <% if(typeof user!="undefined" ){ %>
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="user/logout">Logout</a>
                </li>  <% } %>
                  
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/posts/category/<%= 'Sports' %> ">Sports</a></li>
