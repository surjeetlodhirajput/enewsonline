<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/read.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
<script defer src="/js/read_post.js"></script>
    <title></title>
</head>
<body onresize="changeSize()">
    <%- include('./navbar.ejs') %> 
    <div class="container">
        <div class="imageTop">
            <img src="/images/<%= data.thumbnail %>" alt="" class="imge">
        </div>
        <div class="content" style="overflow-wrap: break-word;">
        <%= data.body %>    
        </div>
    </div>
    <% if(typeof user!="undefined" ){ %>
    <form action="/comment/"  method="POST">
        <div class="form-group">
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" style="visibility: hidden;" value="<%= data._id  %>" name="postid">
          </div>
 
        <div class="form-group" >
          <input type="text" class="form-control" id="exampleInputEmail1" name="comment" aria-describedby="emailHelp" placeholder="Type Comment">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <% } %> 
      <!--section for the comment secition of the read post-->
<div class="comments">
    <ul class="content">
<% Array.from(comments).forEach(comment=>{ %> 
<li><%= comment.comment %> </li>  
<% }) %> 
    </ul>
</div>
    <!--end of the content pane-->

      <!--end of the form -->
      <%- include('./footer.ejs') %> 
</body>
</html>